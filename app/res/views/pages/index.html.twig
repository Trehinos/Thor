{% extends "pages/base.html.twig" %}

{% block titlebar %}{{ icon('book', 'fas', true) }} {{ DICT.index.title }}{% endblock %}

{% block page %}
    <div class="alert alert-info mb-5">
        {{ DICT.index.thor_description }}
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    {{ DICT.index.documentation_text }}
                </div>
                <div class="card-footer">
                    <button onclick="menuClick($('#btn-documentation'))" class="btn btn-sm btn-dark">
                        {{ DICT.index.documentation_button }}
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    {{ DICT.index.features_text }}
                </div>
                <div class="card-footer">
                    <button onclick="menuClick($('#btn-users'))" class="btn btn-sm btn-dark">
                        {{ DICT.index.users_button }}
                    </button>
                    <button onclick="menuClick($('#btn-manage-permissions'))" class="btn btn-sm btn-dark">
                        {{ DICT.index.permissions_button }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
